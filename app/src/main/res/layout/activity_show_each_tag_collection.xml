<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ShowEachTagCollection">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg" />
<!--    <com.example.lbwapp.MaskImageView-->
<!--        android:id="@+id/blur"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:adjustViewBounds="true"-->
<!--        android:maxHeight="600dp"-->
<!--        android:scaleType="centerCrop"-->
<!--        android:src="@drawable/bg" />-->
<!--    android:background="#F4E8CC"-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_showEachTagCollection"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="345dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@id/show_back"
            android:layout_alignBottom="@id/show_back"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="-240dp"
            app:cardBackgroundColor="#FFE57F"
            android:alpha="0.7"
            app:cardCornerRadius="100dp"
            app:cardElevation="10dp"
            app:cardPreventCornerOverlap="true">
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/show_back"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            app:cardPreventCornerOverlap="true"
            app:cardElevation="10dp"
            app:cardCornerRadius="100dp">
            <ImageView
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:rotation="0"
                android:src="@drawable/noteback" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>



</FrameLayout>