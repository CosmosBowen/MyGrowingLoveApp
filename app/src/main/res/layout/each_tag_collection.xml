<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/eachTagFirstImage"
                android:layout_width="@dimen/small_width"
                android:layout_height="@dimen/small_width"
                android:scaleType="centerCrop"
                android:src="@drawable/family5"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.example.lbwapp.MyTextView
                    android:id="@+id/eachTagName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="label: 搞笑"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <com.example.lbwapp.MyTextView
                    android:id="@+id/eachTagCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="count: 5"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

